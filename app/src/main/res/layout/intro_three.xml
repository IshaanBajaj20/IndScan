<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1e2a3a">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="120dp"
        android:elevation="10dp"
        android:backgroundTint="#f2f3f7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save your documents\non cloud storage"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:lottie_fileName="cloud.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save your documents on cloud and access them anytime and anywhere, just with the click of a button."
            android:textSize="16sp"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:paddingTop="10dp"/>





    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>