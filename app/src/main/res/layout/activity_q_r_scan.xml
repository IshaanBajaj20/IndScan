<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QRScan"
    android:background="#fff">


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1e2a3a"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom5"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/reverse" />

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="IndScan"
                android:textColor="#2c618c"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title1"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Qr/Barcode Scan or Generate"
                android:textColor="#9ab0cb"
                android:textSize="10sp" />


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:padding="5dp"
                android:src="@drawable/focu5"
                app:civ_border_color="#fff"
                app:civ_border_width="2dp" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1e2a3a"
        android:layout_below="@id/ll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/custom5"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:elevation="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan QR and Barcodes, and you can even generate your own QR codes and share them."
                android:textColor="#000"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/qrinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter value"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/value"
                android:textColorHint="#000"/>

            <Button
                android:id="@+id/generateBtn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Generate"
                android:elevation="8dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_btn5"
                android:textColor="#fff"/>



            <ImageView
                android:id="@+id/qrPlaceHolder"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:src="@drawable/qrcodegen"/>


            <Button
                android:id="@+id/scanBtn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Scan code"
                android:textColor="#fff"
                android:background="@drawable/custom_btn5"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/shareBtn"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="share"
                android:layout_marginTop="10dp"
                android:background="#00000000" />

        </LinearLayout>



    </LinearLayout>




</RelativeLayout>